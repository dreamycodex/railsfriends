<p style="color: green"><%= notice %></p>

<div id="friends">
  <% @friends.each do |friend| %>
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend, class:"btn btn-outline-secondary" %>
    </p>
  <% end %>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>

